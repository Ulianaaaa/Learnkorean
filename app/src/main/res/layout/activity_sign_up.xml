<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="?attr/colorPrimary">
<!--<ScrollView-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="match_parent">-->


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        app:srcCompat="@drawable/avatarka" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/regular"
        android:text="Регистрация"
        android:textColor="?attr/colorSecondary"
        android:textSize="28dp" />


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="356dp"
        android:layout_height="356dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="285dp"
        app:srcCompat="?attr/actionBarTabStyle" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:ems="10"
        android:hint="Электронная почта"
        android:inputType="textEmailAddress"
        android:textColorHint="?attr/colorSecondaryVariant" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextEmailAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:ems="10"
        android:hint="Логин"
        android:inputType="textPersonName"
        android:textColorHint="?attr/colorSecondaryVariant" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextPersonName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:textColorHint="?attr/colorSecondaryVariant" />

    <EditText
        android:id="@+id/editTextConfPassword"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Повторите пароль"
        android:inputType="textPassword"
        android:textColorHint="?attr/colorSecondaryVariant"
        android:backgroundTint="?attr/colorPrimaryVariant" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextConfPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:onClick="clickToReclamaa"
        android:text="Зарегистрироваться"
        android:textColor="?attr/colorSecondary"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="225dp"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_centerHorizontal="true"
        app:srcCompat="?attr/buttonBarStyle" />

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickoSwitchh"
        android:padding="30dp"
        app:srcCompat="?attr/actionButtonStyle" />


    <!--</ScrollView>-->
</RelativeLayout>