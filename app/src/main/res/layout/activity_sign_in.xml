<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:background="?attr/colorPrimary">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        app:srcCompat="@drawable/avatarka" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/regular"
        android:text="Вход"
        android:textColor="?attr/colorSecondary"
        android:textSize="28dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="385dp"
        app:srcCompat="?attr/actionBarStyle" />

    <EditText
        android:id="@+id/eeditTextTextEmailAddress"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:ems="10"
        android:hint="Электронная почта"
        android:inputType="textEmailAddress"
        android:textColorHint="?attr/colorSecondaryVariant" />

    <EditText
        android:id="@+id/editTextTextPasswordd"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eeditTextTextEmailAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:textColorHint="?attr/colorSecondaryVariant" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPasswordd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:text="Войти"
        android:onClick="clickToReclama"
        android:textColor="?attr/colorSecondary"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="81dp"
        android:layout_marginTop="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView10"
        android:layout_height="wrap_content"
        app:srcCompat="?attr/buttonBarNegativeButtonStyle" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickToSwitch"
        android:padding="30dp"
        app:srcCompat="?attr/actionButtonStyle" />
</RelativeLayout>